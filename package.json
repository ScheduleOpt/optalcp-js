{
  "name": "@scheduleopt/optalcp",
  "version": "2025.12.2",
  "description": "Javascript interface for OptalCP solver",
  "keywords": [
    "optimization",
    "scheduling",
    "solver"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "browser": "build/browser/browser.js",
  "exports": {
    ".": {
      "node": {
        "import": "./build/module/index.js",
        "require": "./build/main/index.js",
        "types": "./build/main/index.d.ts"
      },
      "browser": {
        "import": "./build/browser/browser.js",
        "types": "./build/browser/browser.d.ts"
      },
      "default": "./build/module/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:main && npm run build:module && npm run build:browser",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:browser": "tsc -p tsconfig.browser.json"
  },
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "files": [
    "build/main",
    "build/module",
    "build/browser",
    "!build/main/src",
    "!build/module/src",
    "!build/browser/src",
    "!**/*.spec.*",
    "!**/*.json",
    "!**/*.map",
    "README.md",
    "LICENSE.md"
  ],
  "bin": {
    "optalcp": "build/main/bin/optalcp.js"
  }
}
